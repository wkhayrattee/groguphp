{
  "name": "wkhayrattee/groguphp",
  "description": "A simple layman micro-framework engine to bootstrap a php app, with routing and templating interfaces.",
  "keywords": ["php", "microframework"],
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "Wasseem Khayrattee",
      "email": "hey@wk.contact",
      "homepage": "https://wk.contact"
    }
  ],
  "type": "library",
  "autoload": {
    "psr-4": {
      "Groguphp\\": "src/"
    },
    "files": [
      "groguphp_functions.php",
      "groguphp_runtime_error_handler.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "vlucas/phpdotenv": "5.5.0",
    "nikic/fast-route": "1.3.0",
    "pimple/pimple": "3.5.0",
    "symfony/http-foundation": "6.2.10",
    "symfony/http-kernel": "6.2.10"
  },
  "require-dev": {
    "pestphp/pest": "2.6.0",
    "mockery/mockery": "1.5.1"
  }
}
